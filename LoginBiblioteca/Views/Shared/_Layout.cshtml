<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Interface/css/style.css" type="text/css" media="all">
    <title>Library</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Borrows")</li>                        
                        @if (User.Identity.Name == "admin@admin.com")
                        {
                        <li>@Html.ActionLink("Carti", "Index", "Carti")</li>
                        }
                        <li>@Html.ActionLink("Imprumuta", "Create", "Borrows")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
        </div>
        </nav>
        <div class="container w3layouts agileits">
            @RenderBody()
            <hr />
            <footer class="footer w3layouts agileits">
                <p> &copy; 2016-2018 Library UnitBV. All Rights Reserved | Design by TeamGrashii</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
